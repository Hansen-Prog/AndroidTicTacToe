<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/american"
             tools:context=".StartSinglePlayer"
>
    <TextView
            android:text="Player:"
            android:layout_width="168dp"
            android:layout_height="71dp"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:background="@color/buttons"
            android:id="@+id/start_player_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="133dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="137dp"
            android:layout_marginTop="104dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="296dp"
            android:layout_height="74dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/start_singlePlayer_name"
            android:background="@color/buttons"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="62dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="63dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/start_player_text"
            android:textSize="30sp"
            android:hint="name.."
            android:textColorHint="@color/whiteopacity"
    />
    <TextView
            android:text="choose:"
            android:layout_width="161dp"
            android:layout_height="48dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:background="@color/buttons"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/start_pick_turn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="127dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="123dp"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/start_singlePlayer_name"/>
    <Button
            android:background="@drawable/trump"
            android:id="@+id/play_x"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="98dp"
            app:layout_constraintEnd_toStartOf="@+id/play_o"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/start_pick_turn"/>
    <Button
            android:background="@drawable/kim"
            android:id="@+id/play_o"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textSize="30sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/play_x"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="98dp"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/start_pick_turn"/>


    <Button
            android:text="Start"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:id="@+id/oneplayer_btn_start"
            android:background="@color/buttonsDarker"
            android:textColor="@color/white"
            android:layout_marginEnd="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp"/>
    <Button
            android:text="Menu"
            android:layout_width="120dp"
            android:layout_height="52dp"
            android:id="@+id/oneplayer_btn_menu"
            android:background="@color/buttonsDarker"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="17dp"/>
</android.support.constraint.ConstraintLayout>