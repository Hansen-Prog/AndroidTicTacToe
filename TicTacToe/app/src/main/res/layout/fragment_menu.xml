<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu_layout"
        android:background="@drawable/american"
        tools:context=".ActivityStart">

    <Button
            android:text="Two Player"
            android:layout_width="284dp"
            android:layout_height="102dp"
            android:id="@+id/btn_two_player"
            android:textSize="24sp"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_one_player"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp"
            android:background="@color/buttons"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Against CPU"
            android:layout_width="284dp"
            android:layout_height="102dp"
            android:id="@+id/btn_one_player"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="63dp"
            android:background="@color/buttons"
            android:textColor="@color/white"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_two_player"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_match_frag"/>
    <Button
            android:text="Match History"
            android:id="@+id/btn_match_frag"
            android:layout_width="284dp"
            android:layout_height="102dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/buttons"
            android:textColor="@color/white"
            android:layout_marginStart="63dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="166dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_one_player" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="118dp"
            android:layout_height="136dp" app:srcCompat="@drawable/trump"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
    />
    <ImageView
            android:layout_width="122dp"
            android:layout_height="149dp" app:srcCompat="@drawable/kim"
            android:id="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Tic Tac Trump"
            android:layout_width="151dp"
            android:layout_height="122dp"
            android:id="@+id/main_title"
            android:background="@color/buttonsDarker"
            android:textColor="@color/white"
            android:textSize="45dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.571"/>
    <ImageView
            android:layout_width="122dp"
            android:layout_height="118dp" app:srcCompat="@drawable/kim"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
            android:layout_width="118dp"
            android:layout_height="136dp" app:srcCompat="@drawable/trump"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
